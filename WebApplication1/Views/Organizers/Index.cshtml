@model IEnumerable<WebApplication1.Models.Organizer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-heading">
    <div class="pull-left">
        <h4>Manage Organizer</h4>
    </div>
    <div class="pull-right">
        @Html.ActionLink("Add Organizer", "Create", new { area = "" }, new { @class = "btn btn-primary" })
    </div>
</div>
<table class="table">
    <tr>
        <th>
            Organizer Name
        </th>
        <th>
            Organizer Email
        </th>
        <th>
            Mobile No
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizerMobileNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizerAddress)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrganizerID }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrganizerID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrganizerID })
            </td>
        </tr>
    }

</table>
